<div class="relative max-w-screen-lg mx-auto mb-10">
  <% if flash[:errors].present? %>
    <div class="bg-red-100 p-6 rounded">
      <h5 class="mb-2 font-bold">Please fix the following errors:</h5>

      <ul class="list-disc ml-6">
        <% flash[:errors].each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:success].present? %>
    <div class="bg-green-100 p-6 rounded"><%= flash[:success] %></div>
  <% end %>

  <% if flash[:notice].present? %>
    <div class="bg-blue-100 p-6 rounded"><%= flash[:notice] %></div>
  <% end %>
</div>
