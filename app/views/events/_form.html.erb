<%= form_for(@event) do |f| %>
    <div class="field">
        <%= f.label :time, class: "required-field" %><br />
        <%= f.date_select :time %>
    </div>

    <div class="field">
        <%= f.label :place, class: "required-field" %><br />
        <%= f.text_field :place %>
    </div>

    <div class="field">
        <%= f.label :agenda, class: "required-field" %><br />
        <%= f.text_area :agenda %>
    </div>

    <div class="field">
        <%= f.label :participants, class: "required-field" %><br />
        <%= f.text_area :participants %>
    </div>

    <div class="field">
        <%= f.label :demo_links, class: "required-field" %><br />
        <%= f.text_area :demo_links %>
    </div>

    <div class="field">
        <%= f.label :voting_status, class: "required-field" %><br />
        <%= f.select :voting_status, voting_status_options(@event), {}, class: "full-width" %>
    </div>

    <div class="actions">
        <%= f.submit class: "button" %>
    </div>
<% end %>
