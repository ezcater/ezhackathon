<%= flash[:success] %>
<p><%= link_to "Back to Events", events_path %></p>
<h1> <%=@time%> </h1>
<h3> <%=@event.place%> </h3>

<h4>Agenda:</h4>
<%= @event.agenda%>

<h4>Participants:</h4>
<%= @event.participants%>

<h4>Demos:</h4>
<%= @event.demo_links%>

<h4>What's a fun fact that you know?</h4>
<%= @event.silly_answers%>

<div class="projects">
  <h3>Projects:</h3>

  <% @projects.each do |project|%>
      <a class="project" href=<%=project.links%>><%="#{project.name}: #{project.tagline}"%></a>
      <%=project.description%><br>
    <%= button_to "Edit Project", edit_event_project_path(@event), :method => "get" %>
  <% end %>

  <%=button_to "Add a New Project", new_event_project_path(@event), :method => "get", class:"button" %>
</div>

